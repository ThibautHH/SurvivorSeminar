        "https://via.placeholder.com/150/9ACD32",
        "https://via.placeholder.com/150/FFE4B5",
        "https://via.placeholder.com/150/000000"
    ];

    const imageListElement = document.getElementById('image-list');

    imageUrls.forEach(url => {
        const imgElement = document.createElement('img');
        imgElement.src = url;
        imgElement.className = 'image-item';
        imgElement.onclick = () => selectImage(url);
        imageListElement.appendChild(imgElement);
    });

    let selectedSlot = null;

    function selectSlot(slotIndex) {
        if (selectedSlot !== null) {
            document.getElementById('slot-' + selectedSlot).classList.remove('selected');
        }

        selectedSlot = slotIndex;
        document.getElementById('slot-' + selectedSlot).classList.add('selected');
    }

    function selectImage(imageUrl) {
        if (selectedSlot !== null) {
            let slotElement = document.getElementById('slot-' + selectedSlot);
            slotElement.innerHTML = `<img src="${imageUrl}" class="selected-image" />`;
        }
    }
</script>
