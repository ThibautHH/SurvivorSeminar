@page "/clothes"

<div class="header">
    <h1>Clothes</h1>
</div>

<PageTitle>Clothes</PageTitle>

<div class="container">

    <div class="main-content">
        <div class="scrollable-image-list-container">
            <div id="image-list" class="scrollable-image-list">
            </div>
        </div>

        <div class="selection-container">
            <div class="selection-slot" id="slot-0" onclick="selectSlot(0)"></div>
            <div class="selection-slot" id="slot-1" onclick="selectSlot(1)"></div>
            <div class="selection-slot" id="slot-2" onclick="selectSlot(2)"></div>
        </div>
    </div>
</div>

<script>
    const imageUrls = [
        "https://via.placeholder.com/150",
